<Window x:Class="Assignment_2.Window_Component.Views.ViewMenuViews.ViewCurrentLoansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2.Window_Component.Views.ViewMenuViews"
        mc:Ignorable="d"
        Title="ViewCurrentLoansWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        

        <DataGrid Grid.Row="3" ItemsSource="{Binding ViewData}" Margin="0,28,0,0">
        </DataGrid>
        <TextBlock Grid.Row="2">
             <Run Text="Count of members with loans currently: " />
               <Run Text="{Binding Count,Mode=OneWay}" />
        </TextBlock>

    </Grid>

</Window>
